<idea-plugin>
    <id>me.tianshili.matcha</id>
    <name>Matcha</name>
    <version>1.0</version>
    <vendor email="me@tianshili.me" url="https://tianshili.me">Matcha</vendor>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>org.intellij.groovy</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Privacy Labels" anchor="bottom" factoryClass="org.intellij.privacyHelper.panelUI.PrivacyCheckerToolWindow"/>
        <projectService serviceImplementation="org.intellij.privacyHelper.panelUI.PrivacyCheckerView" />
        <localInspection shortName="PersonalDataSourceAPIInspection" displayName="PersonalDataSourceAPIInspection" groupName="PersonalDataSourceAPIInspection" enabledByDefault="true" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.PersonalDataSourceAPIInspection"/>
        <localInspection shortName="PersonalDataSinkAPIInspection" displayName="PersonalDataSinkAPIInspection" groupName="PersonalDataSinkAPIInspection" enabledByDefault="true" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.PersonalDataSinkAPIInspection"/>
        <localInspection shortName="AnnotationScanInspection" displayName="AnnotationScanInspection" groupName="AnnotationScanInspection" enabledByDefault="true" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.AnnotationScanInspection"/>
        <localInspection shortName="ThirdPartyLibImportInspection" displayName="ThirdPartyLibImportInspection" groupName="ThirdPartyLibImportInspection" enabledByDefault="true" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.ThirdPartyLibImportInspection"/>
        <localInspection shortName="AnnotationTooltipInspection" displayName="AnnotationTooltipInspection" groupName="AnnotationTooltipInspection" enabledByDefault="true" level="Transparent" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.AnnotationTooltipInspection"/>
        <localInspection shortName="LibraryConfigXmlInspection" displayName="LibraryConfigXmlInspection" groupName="LibraryConfigXmlInspection" enabledByDefault="true" implementationClass="org.intellij.privacyHelper.codeInspection.inspections.LibraryConfigXmlInspection"/>
        <severitiesProvider implementation="org.intellij.privacyHelper.codeInspection.severitiesProviders.PrivacySensitiveAnnotationSeveritiesProvider"/>
        <severitiesProvider implementation="org.intellij.privacyHelper.codeInspection.severitiesProviders.InconsistentAnnotationSeveritiesProvider"/>
        <severitiesProvider implementation="org.intellij.privacyHelper.codeInspection.severitiesProviders.TransparentHighlightSeveritiesProvider"/>

        <lang.foldingBuilder language="JAVA" implementationClass="org.intellij.privacyHelper.ideUI.AnnotationFolderBuilder" order="first"/>

        <postStartupActivity implementation="org.intellij.privacyHelper.startup.PrivacyCompiler" />
        <postStartupActivity implementation="org.intellij.privacyHelper.startup.ImportAnnotationLibTask" />
        <postStartupActivity implementation="org.intellij.privacyHelper.startup.RegisterEventListenersTask" />

        <intentionAction>
            <className>org.intellij.privacyHelper.codeInspection.intentionActions.AddDataAccessAnnotationIntentionAction</className>
            <category>Java/Declaration</category>
        </intentionAction>

        <intentionAction>
            <className>org.intellij.privacyHelper.codeInspection.intentionActions.AddDataTransmissionAnnotationIntentionAction</className>
            <category>Java/Declaration</category>
        </intentionAction>
    </extensions>

</idea-plugin>

